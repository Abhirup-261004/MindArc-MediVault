<% pageCSS = ["report"]; %>

<!-- QR Code Library -->
<script src="https://cdn.jsdelivr.net/gh/davidshimjs/qrcodejs/qrcode.min.js"></script>

<div class="header">
    <a href="/" class="back-btn">Back to Home</a>
    <h1>MediVault â€“ Medical Reports</h1>
</div>

<!-- Controls -->
<div class="controls">

    <input id="searchBox" type="text" placeholder="Search reports...">

    <select id="categoryFilter">
        <option value="all">All Categories</option>
        <option value="Laboratory">Laboratory</option>
        <option value="Radiology">Radiology</option>
        <option value="Cardiology">Cardiology</option>
        <option value="Discharge Summary">Discharge Summary</option>
        <option value="Vaccination">Vaccination</option>
    </select>

    <button class="btn" id="addReportBtn">Add Report</button>
    <button class="btn qr-btn" id="profileQrBtn">Full Access QR</button>
    <button class="btn share-selected-btn" id="shareSelectedBtn">Share Selected</button>
</div>

<!-- Reports Table -->
<table id="reportTable">
    <thead>
        <tr>
            <th><input type="checkbox" id="selectAll"></th>
            <th>Report Name</th>
            <th>Type</th>
            <th>Category</th>
            <th>Date</th>
            <th>Doctor</th>
            <th>File</th>
            <th>View</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody id="tableBody">
        <!-- JS dynamically adds rows -->
    </tbody>
</table>

<!-- View Modal -->
<div id="modal" class="modal">
    <div class="modalBox">
        <button id="closeModal">X</button>
        <div id="modalContent"></div>
    </div>
</div>

<!-- Add Report Modal -->
<div id="addReportModal" class="modal">
    <div class="modalBox">

        <button id="closeAddReport" class="closeBtn">X</button>

        <h2>Add New Medical Report</h2>

        <label>Report Name</label>
        <input type="text" id="r_name" placeholder="e.g. Blood Test Report">

        <label>File Type</label>
        <select id="r_type">
            <option value="Image">Image (JPG/PNG)</option>
            <option value="PDF">PDF Document</option>
        </select>

        <label>Upload File <span id="fileInfo" style="color:#d32f2f;font-size:12px;"></span></label>
        <input type="file" id="fileUpload" accept="image/*,.pdf">

        <label>Category</label>
        <input type="text" id="r_category" placeholder="e.g. Laboratory">

        <label>Date</label>
        <input type="date" id="r_date">

        <label>Doctor Name</label>
        <input type="text" id="r_doctor" placeholder="Dr. Sharma">

        <button id="saveReportBtn" class="btn">Save Report</button>

    </div>
</div>

<!-- JS -->
    <script src="/js/reports.js"></script>